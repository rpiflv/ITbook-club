<% content_for :page_title, "Books Index" %>

<section class="section">
<div class="container">
<% @books.list_new['books'].each do |book| %>
    <div class="card">
        <div class="class-content">
            <div class="media">
                <div class="media-content">
                    <p class="title is-4"><%= link_to book['title'], book['url'] %></p>
                </div>
            </div>
            <div class="content">
                <%= book['subtitle'] %>
            </div>
    <br/>
        </div>
        <% end %>
</div>
</section>