<!DOCTYPE html>
<html>
  <head>
    <title>BookClub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <section class="hero is-link is-small">
  <!-- Hero head: will stick at the top -->

  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <%= link_to "IT-Book Club", root_path, class: "navbar-item" %>
          <span class="navbar-burger" data-target="navbarMenuHeroA">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
  <% if user_signed_in? %> 
        <div id="navbarMenuHeroA" class="navbar-menu">
          <div class="navbar-end">
            <%= link_to "Create new post", new_post_path, class: "navbar-item" %>
          </div>
        </div>
         <% end %>
        <div id="navbarMenuHeroA" class="navbar-menu">
          <div class="navbar-end">
            <%= link_to "Check latest books", books_index_path, class: "navbar-item" %>
          </div>
        </div>
            <% if user_signed_in? %> 
        <div id="navbarMenuHeroA" class="navbar-item">
          <div class="navbar-end">
              <div> <%= current_user.email %> </div> 
              <%= button_to "Sign out", destroy_user_session_path, method: :delete %> 
            <% else %>
              <%= link_to "Sign in", new_user_session_path, class: "navbar-item"%> 
              <%= link_to "Sign up", new_user_registration_path, class: "navbar-item"%> 
          </div>
          </div>
              <% end %>
      </div>
    </nav>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        <%= yield :page_title %>
      </h1>
    </div>
  </div>
</section>
    <p class="notice"><%= notice %></p> 
    <p class="alert"><%= alert %></p> 
    <%= yield %>
  </body>
</html>
