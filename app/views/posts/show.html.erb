<% content_for :page_title, @post.title %>

<%= image_tag "https://itbook.store/img/books/#{@post.isbn}.png" if @post.isbn %>

<section class="section"> 
    <div class="container">
        <nav class="level">
            <div class="level-left">
                <p class="level-item">
                    <strong>Actions</strong>
                </p>
            </div>
<div class="level-right">
		  	<p class="level-item">
		    	<%= link_to "Edit", edit_post_path(@post), class:"button" %>
		  	</p>
		  	<p class="level-item">
				<%= button_to "Delete", post_path(@post), method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}}, class:"button is-danger" %>
				</p>
		  </div>
        </nav>
        <hr/>

        <div>
        
        </div class="content">
        <%= @post.content %>
    </div>
</section>

<section class="comments">
    <div class="container">
        <h2 class="subtitle is-5">
        <strong><%= @post.comments.count %> Comments</strong></h2>
    </div>
    <%= render @post.comments%>
    <div class="comment-form">
    <hr/>
    <h3 class="subtitle is-3">Leave a comment</h3>
    <%= render 'comments/form' %>
    </div>
</section>